<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    tools:context="com.gamaliev.list.colorpicker.ColorPickerActivity">


    <!-- Favorite icons -->
    <ImageView
        android:id="@+id/activity_color_picker_image_ic_helper_favorite_swipe"
        style="@style/ColorPickerHelperIcons"
        app:srcCompat="@drawable/ic_swap_horiz_black_36dp"
        android:contentDescription="@string/activity_color_picker_ic_helper_swipe"
        android:layout_above="@+id/activity_color_picker_scroll_favorite_bar"
        android:layout_marginEnd="20dp"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/activity_color_picker_image_ic_helper_favorite_add"
        style="@style/ColorPickerHelperIcons"
        app:srcCompat="@drawable/ic_favorite_border_black_36dp"
        android:contentDescription="@string/activity_color_picker_ic_helper_favorite"
        android:layout_alignTop="@+id/activity_color_picker_image_ic_helper_favorite_swipe"
        android:layout_toStartOf="@+id/activity_color_picker_image_ic_helper_favorite_swipe" />

    <ImageView
        android:id="@+id/activity_color_picker_image_ic_helper_favorite_touch"
        style="@style/ColorPickerHelperIcons"
        android:contentDescription="@string/activity_color_picker_ic_helper_touch"
        app:srcCompat="@drawable/ic_touch_app_black_36dp"
        android:layout_alignTop="@+id/activity_color_picker_image_ic_helper_favorite_add"
        android:layout_toStartOf="@+id/activity_color_picker_image_ic_helper_favorite_add" />


    <!-- Palette icons -->
    <ImageView
        android:id="@+id/activity_color_picker_image_ic_helper_palette_swipe"
        style="@style/ColorPickerHelperIcons"
        android:contentDescription="@string/activity_color_picker_ic_helper_swipe"
        app:srcCompat="@drawable/ic_swap_horiz_black_36dp"
        android:layout_below="@+id/activity_color_picker_scroll_palette_bar"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"/>

    <ImageView
        android:id="@+id/activity_color_picker_image_ic_helper_palette_move"
        style="@style/ColorPickerHelperIcons"
        android:contentDescription="@string/activity_color_picker_ic_helper_move"
        app:srcCompat="@drawable/ic_open_with_black_36dp"
        android:layout_alignTop="@+id/activity_color_picker_image_ic_helper_palette_swipe"
        android:layout_toStartOf="@+id/activity_color_picker_image_ic_helper_palette_swipe" />

    <ImageView
        android:id="@+id/activity_color_picker_image_ic_helper_palette_touch"
        style="@style/ColorPickerHelperIcons"
        android:contentDescription="@string/activity_color_picker_ic_helper_touch"
        app:srcCompat="@drawable/ic_touch_app_black_36dp"
        android:layout_alignTop="@+id/activity_color_picker_image_ic_helper_palette_move"
        android:layout_toStartOf="@+id/activity_color_picker_image_ic_helper_palette_move" />


    <!-- Palette bar -->
    <com.gamaliev.list.common.SwitchableHorizontalScrollView
        android:id="@+id/activity_color_picker_scroll_palette_bar"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/activity_color_picker_scroll_palette_bar_material_elevation"
        android:background="@color/color_black"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/activity_color_picker_ll_palette_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        </LinearLayout>
    </com.gamaliev.list.common.SwitchableHorizontalScrollView>


    <!-- Favorite bar -->
    <HorizontalScrollView
        android:id="@+id/activity_color_picker_scroll_favorite_bar"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/activity_color_picker_ll_favorite_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal"
            android:clipChildren="false"
            android:clipToPadding="false">
        </LinearLayout>

    </HorizontalScrollView>


    <!-- Result -->
    <FrameLayout
        android:id="@+id/activity_color_picker_ff_result_padding"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/activity_color_picker_image_ic_helper_palette_swipe"
        android:layout_above="@id/activity_color_picker_image_ic_helper_favorite_swipe">

        <FrameLayout
            android:id="@+id/activity_color_picker_ff_result_outer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <FrameLayout
                android:id="@+id/activity_color_picker_ff_result_box"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@color/color_picker_default"
                android:elevation="@dimen/activity_color_picker_ff_result_box_material_elevation">

                <TextView
                    android:id="@+id/activity_color_picker_text_result_box"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </FrameLayout>

            <ImageView
                android:id="@+id/activity_color_picker_ic_done"
                style="@style/ColorPickerActionIcons"
                android:contentDescription="@string/activity_color_picker_ic_done_description"
                android:layout_marginBottom="30dp"
                app:srcCompat="@drawable/ic_done_black_48dp" />

            <ImageView
                android:id="@+id/activity_color_picker_ic_cancel"
                style="@style/ColorPickerActionIcons"
                android:contentDescription="@string/activity_color_picker_ic_cancel_description"
                android:layout_marginTop="30dp"
                app:srcCompat="@drawable/ic_clear_black_48dp"/>

        </FrameLayout>

    </FrameLayout>

</RelativeLayout>
