<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gamaliev.list.list.ListActivity">


    <!-- Toolbar -->
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/activity_list_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>


    <!-- ListView -->
    <ListView
        android:id="@+id/activity_list_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/activity_list_padding_top"
        android:paddingBottom="@dimen/activity_list_padding_bottom"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>


    <!-- Found button -->
    <Button
        android:id="@+id/activity_list_button_found"
        android:layout_width="@dimen/activity_list_button_found_width"
        android:layout_height="@dimen/activity_list_button_found_height"
        android:layout_gravity="top|end"
        android:layout_margin="@dimen/activity_list_button_found_margin"
        android:visibility="invisible"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>


    <!-- FAB -->
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/activity_list_fab"
        android:src="@drawable/ic_add_white_24dp"
        android:clickable="true"
        app:fabSize="normal"
        app:backgroundTint="@color/activity_list_fab_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/activity_list_fab_margin" />

</android.support.design.widget.CoordinatorLayout>

