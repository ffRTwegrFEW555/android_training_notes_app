<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/fragment_sync_item_height"
    android:orientation="vertical"
    android:padding="@dimen/fragment_sync_item_padding">

    <TextView
        android:id="@+id/fragment_sync_item_finished"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@android:color/primary_text_light"
        android:textSize="@dimen/fragment_sync_item_title_text_size"/>

    <TextView
        android:id="@+id/fragment_sync_item_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="2"
        android:textSize="@dimen/fragment_sync_item_description_text_size"/>

</LinearLayout>