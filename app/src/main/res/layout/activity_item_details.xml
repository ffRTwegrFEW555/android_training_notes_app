<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusableInTouchMode="true">


    <!-- Toolbar -->
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/activity_item_details_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>


    <!-- Header -->
    <FrameLayout
        android:id="@+id/activity_item_details_ff_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:elevation="@dimen/activity_item_details_ff_title_elevation"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="bottom">

            <!-- Color box -->
            <FrameLayout
                android:id="@+id/activity_item_details_color"
                android:layout_width="@dimen/activity_item_details_ff_color_radius"
                android:layout_height="@dimen/activity_item_details_ff_color_radius"
                android:layout_marginStart="@dimen/activity_item_details_ff_color_margin_start"
                android:layout_marginBottom="@dimen/activity_item_details_ff_color_margin_bottom"
                android:layout_gravity="bottom"
                android:transitionName="@string/shared_transition_name_color_box"/>

            <!-- Progress bar -->
            <ProgressBar
                android:id="@+id/activity_item_details_progress_bar_replacer"
                android:layout_width="@dimen/activity_item_details_ff_color_radius"
                android:layout_height="@dimen/activity_item_details_ff_color_radius"
                android:layout_marginStart="@dimen/activity_item_details_ff_color_margin_start"
                android:layout_marginBottom="@dimen/activity_item_details_ff_color_margin_bottom"
                android:layout_gravity="bottom"
                android:theme="@style/AppTheme.WhileColor"
                android:visibility="gone"/>

            <!-- Title -->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/activity_item_details_text_layout_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="@dimen/activity_item_details_text_layout_name_margin"
                android:theme="@style/Base.TextAppearance.AppCompat.Title.WhiteAccent">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/activity_item_details_title_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/activity_item_details_text_view_title"
                    android:inputType="textNoSuggestions"
                    android:maxLines="1" />

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

    </FrameLayout>

    <!-- Body -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/activity_item_details_body_layout_padding">

            <!-- Description -->
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/activity_item_details_description_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/activity_item_details_text_view_description"
                    android:inputType="textMultiLine|textNoSuggestions"
                    android:textColor="?android:textColorSecondary"
                    android:theme="@style/Base.TextAppearance.AppCompat.Body1"/>

            </android.support.design.widget.TextInputLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_item_details_image_url_text_layout_margin">

                <!-- Refresh Image Button -->
                <android.support.v7.widget.AppCompatImageButton
                    android:id="@+id/activity_item_details_image_url_refresh_button"
                    android:layout_width="@dimen/activity_item_details_image_refresh_button_size"
                    android:layout_height="@dimen/activity_item_details_image_refresh_button_size"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="@dimen/activity_item_details_image_refresh_button_margin_top"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:tint="@color/colorPrimary"
                    app:srcCompat="@drawable/ic_refresh_black_36dp"/>

                <!-- Image Url -->
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/activity_item_details_image_url_text_input_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@id/activity_item_details_image_url_refresh_button">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/activity_item_details_image_url_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/activity_item_details_image_url_text_view"
                        android:inputType="textNoSuggestions"
                        android:maxLines="1"
                        android:textColor="?android:textColorSecondary"
                        android:theme="@style/Base.TextAppearance.AppCompat.Body1"/>

                </android.support.design.widget.TextInputLayout>

            </RelativeLayout>

            <!-- Picture -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ProgressBar
                    android:id="@+id/activity_item_details_image_view_progress"
                    android:layout_width="@dimen/activity_item_details_image_view_progress_size"
                    android:layout_height="@dimen/activity_item_details_image_view_progress_size"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/activity_item_details_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/activity_item_details_image_view_height"
                    android:layout_marginTop="@dimen/activity_item_details_image_view_margin"
                    android:contentDescription="@string/activity_item_details_image_view_description"/>

                <ImageView
                    android:id="@+id/activity_item_details_image_view_error"
                    android:layout_width="@dimen/activity_item_details_image_view_error_size"
                    android:layout_height="@dimen/activity_item_details_image_view_error_size"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_error_outline_black_48dp"
                    android:tint="@color/color_primary_contrast"
                    android:contentDescription="@string/activity_item_details_image_view_error"
                    android:visibility="gone"/>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>

