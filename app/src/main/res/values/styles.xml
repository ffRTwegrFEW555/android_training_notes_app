<resources>


    <!-- App Theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.Fullscreen">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorAccent">@color/color_white</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Base.TextAppearance.AppCompat.Title.WhiteAccent" parent="@style/Base.TextAppearance.AppCompat.Title">
        <item name="colorAccent">@color/color_white</item>
        <item name="colorControlNormal">@color/color_white</item>
        <item name="colorControlActivated">@color/color_white</item>
        <item name="android:textColorHint">@color/color_white</item>
    </style>

    <!-- Fragment Color Picker -->
    <style name="ColorPickerPopupWindowAnimation">
        <item name="android:windowEnterAnimation">@anim/fragment_color_picker_pw_on_show</item>
        <item name="android:windowExitAnimation">@anim/fragment_color_picker_pw_on_dismiss</item>
    </style>

    <style name="ColorPickerHelperIcons">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:tint">@color/color_picker_default</item>
    </style>

    <style name="ColorPickerActionIcons">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">110dp</item>
        <item name="android:tint">@color/color_picker_default</item>
    </style>

    <style name="ColorPickerActionIconsLand">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_gravity">start|center_vertical</item>
        <item name="android:layout_marginStart">130dp</item>
        <item name="android:tint">@color/color_picker_default</item>
    </style>

    <!-- Fragment List. Filter dialog. Progress bar -->
    <style name="AppTheme.ContrastColorAccent">
        <item name="colorAccent">@color/color_primary_contrast</item>
    </style>

    <!-- Fragment Item Details. Progress Header -->
    <style name="AppTheme.WhileColor">
        <item name="colorAccent">@color/color_white</item>
    </style>

</resources>
