<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/activity_list_nav_drawer_height"
    android:background="@drawable/navigation_drawer_header_background"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="@dimen/activity_list_nav_drawer_padding"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/activity_list_nav_drawable_header_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/activity_list_nav_drawer_image_padding_top"
        app:srcCompat="@drawable/ic_bookmark_border_white_48dp"
        android:contentDescription="@string/activity_list_nav_drawable_header_image_view_description" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/activity_list_nav_drawer_text_padding_top"
        android:text="@string/activity_list_name"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/activity_list_nav_drawable_header_mail_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_list_nav_drawer_text_mail" />

</LinearLayout>
