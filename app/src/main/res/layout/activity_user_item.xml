<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/activity_user_item_height"
    android:orientation="horizontal"
    android:paddingStart="@dimen/activity_user_item_padding"
    android:paddingEnd="0dp"
    android:paddingTop="@dimen/activity_user_item_padding"
    android:paddingBottom="@dimen/activity_user_item_padding_bottom"
    android:descendantFocusability="blocksDescendants">

    <!-- Photo -->
    <ImageView
        android:id="@+id/activity_user_item_photo"
        android:layout_width="@dimen/activity_user_item_photo_width"
        android:layout_height="@dimen/activity_user_item_photo_height"
        android:layout_marginEnd="@dimen/activity_user_item_photo_margin_end"
        android:contentDescription="@string/activity_user_item_photo_description"
        android:src="@drawable/ic_account_circle_black_48dp"
        android:tint="@color/color_picker_default"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:divider="?android:dividerVertical"
        android:showDividers="middle">

        <!-- Text -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="0dp"
            android:paddingEnd="@dimen/activity_user_item_description_padding_end">

            <TextView
                android:id="@+id/activity_user_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@android:color/primary_text_light"
                android:textSize="@dimen/activity_user_item_title_text_size"/>

            <TextView
                android:id="@+id/activity_user_item_description_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:textSize="@dimen/activity_user_item_description_text_size"/>

            <TextView
                android:id="@+id/activity_user_item_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:textSize="@dimen/activity_user_item_description_text_size"/>

        </LinearLayout>

        <!-- Button. Configure -->
        <ImageButton
            android:id="@+id/activity_user_item_configure_button"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="@dimen/activity_user_item_button_width"
            android:layout_height="match_parent"
            android:contentDescription="@string/activity_user_item_configure_button_description"
            android:src="@drawable/ic_settings_black_24dp"
            android:tint="@color/color_picker_default"/>

    </LinearLayout>

</LinearLayout>