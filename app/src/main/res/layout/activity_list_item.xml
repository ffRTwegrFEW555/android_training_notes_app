<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/activity_list_item_height"
    android:padding="@dimen/activity_list_item_padding">

    <FrameLayout
        android:id="@+id/activity_list_item_color"
        android:layout_width="@dimen/activity_list_item_color_width"
        android:layout_height="@dimen/activity_list_item_color_height"
        android:layout_marginEnd="@dimen/activity_list_item_color_margin_start"
        android:background="@drawable/btn_oval"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/activity_list_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/primary_text_light"
            android:lines="@integer/activity_list_item_title_lines"
            android:textSize="@dimen/activity_list_item_title_text_size"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/activity_list_item_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="@integer/activity_list_item_description_lines"
            android:textSize="@dimen/activity_list_item_description_text_size"
            android:ellipsize="end"/>

    </LinearLayout>

</LinearLayout>